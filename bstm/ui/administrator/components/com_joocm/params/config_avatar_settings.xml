<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="component">
	<name>Avatar Settings</name>
	<author>Joo!BB Project</author>
	<copyright>(C) 2007-2010 Joo!BB. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>n/a</authorEmail>
	<authorUrl>http://www.joobb.org</authorUrl>
	<version>1.0.0</version>
	<description>Parameters for individual Avatar Configuration.</description>
	<params>
		<param name="image_resize" type="radio" default="1" label="CM_IMAGERESIZE" description="CM_IMAGERESIZEDESC">
			<option value="0">CM_NO</option>
			<option value="1">CM_YES</option>
		</param>
		<param name="image_resize_quality" type="text" size="5" default="100" label="CM_IMAGERESIZEQUALITY" description="CM_IMAGERESIZEQUALITYDESC" />
		<param name="avatars_max" type="text" size="5" default="3" label="CM_AVATARMAX" description="CM_AVATARMAXDESC" />
		<param name="avatar_width" type="text" size="5" default="100" label="CM_AVATARWIDTH" description="CM_AVATARWIDTHDESC" />
		<param name="avatar_height" type="text" size="5" default="100" label="CM_AVATARHEIGHT" description="CM_AVATARHEIGHTDESC" />
		<param name="avatar_max_file_size" type="text" size="5" default="8192" label="CM_AVATARMAXFILESIZE" description="CM_AVATARMAXFILESIZEDESC" />
		<param name="avatar_path" type="text" size="50" default="media/joocm/avatars" label="CM_AVATARPATH" description="CM_AVATARPATHDESC" />
		<param name="avatar_file_types" type="text" size="50" default="jpg,png,gif,bmp" label="CM_AVATARFILETYPES" description="CM_AVATARFILETYPESDESC" />
	</params>
</install>