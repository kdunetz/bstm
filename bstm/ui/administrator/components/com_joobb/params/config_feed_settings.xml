<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="component">
	<name>Feed Configuration</name>
	<author>Joo!BB Project</author>
	<copyright>(C) 2007-2010 Joo!BB. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>n/a</authorEmail>
	<authorUrl>http://www.joobb.org</authorUrl>
	<version>1.0.0</version>
	<description>Parameters for individual Feed Configuration</description>
	<params>
		<param name="enable_feeds" type="radio" default="1" label="BB_ENABLEFEEDS" description="BB_ENABLEFEEDSDESC">
			<option value="0">BB_NO</option>
			<option value="1">BB_YES</option>
		</param>
		<param name="feed_items_count" type="text" size="50" default="10" label="BB_FEEDITEMSCOUNT" description="BB_FEEDITEMSCOUNTDESC" />
		<param name="feed_items_type" type="list" size="50" default="0" label="BB_FEEDITEMSTYPE" description="BB_FEEDITEMSTYPEDESC">
			<option value="0">BB_TOPICS</option>
			<option value="1">BB_POSTS</option>
		</param>
	    <param name="@spacer" type="spacer" default="" label="" description="" />
	    <param name="feed_desc_trunk_size" type="text" size="5" default="0" label="BB_FEEDDESCTRUNKSIZE" description="BB_FEEDDESCTRUNKSIZEDESC" />
	    <param name="feed_desc_html_syndicate" type="radio" default="0" label="BB_FEEDDESCHTMLSYNDICATE" description="BB_FEEDDESCHTMLSYNDICATEDESC">
			<option value="0">BB_NO</option>
			<option value="1">BB_YES</option>
	    </param>
	    <param name="@spacer" type="spacer" default="" label="" description="" />
	    <param name="feed_image_title" type="text" size="50" default="Joo!BB Logo" label="BB_FEEDIMAGETITLE" description="BB_FEEDIMAGETITLEDESC" />
	    <param name="feed_image_url" type="text" size="50" default="http://www.joobb.org/images/logo.png" label="BB_FEEDIMAGEURL" description="BB_FEEDIMAGEURLDESC" />
	    <param name="feed_image_link" type="text" size="50" default="http://www.joobb.org/" label="BB_FEEDIMAGELINK" description="BB_FEEDIMAGELINKDESC" />
	    <param name="feed_image_description" type="textarea" cols="30" rows="5" default="This feed is provided by joobb.org. Please click to visit." label="BB_FEEDIMAGEDESCRIPTION" description="BB_FEEDIMAGEDESCRIPTIONDESC" />
	    <param name="feed_image_desc_trunk_size" type="text" size="5" default="0" label="BB_FEEDIMAGEDESCTRUNKSIZE" description="BB_FEEDIMAGEDESCTRUNKSIZEDESC" />
	    <param name="feed_image_desc_html_syndicate" type="radio" default="0" label="BB_FEEDIMAGEHTMLSYNDICATE" description="BB_FEEDIMAGEHTMLSYNDICATEDESC">
			<option value="0">BB_NO</option>
			<option value="1">BB_YES</option>
	    </param>
	</params>
</install>