<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="component">
	<name>Parse Configuration</name>
	<author>Joo!BB Project</author>
	<copyright>(C) 2007-2010 Joo!BB. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>n/a</authorEmail>
	<authorUrl>http://www.joobb.org</authorUrl>
	<version>1.0.0</version>
	<description>Parameters for individual Parse Configuration</description>
	<params addpath="/administrator/components/com_joobb/elements">
		<param name="@joobbheader" type="joobbheader" default="BB_TAGSETTINGSCODE" />
		<param name="enable_line_numbers" type="list" size="50" default="0" label="BB_ENABLELINENUMBERS" description="BB_ENABLELINENUMBERSDESC">
			<option value="0">BB_NOLINENUMBERS</option>
			<option value="1">BB_NORMALLINENUBMERS</option>
			<option value="2">BB_FANCYLINENUMBERS</option>
		</param>
		<param name="link_target" type="text" size="10" default="_blank" label="BB_LINKTARGET" description="BB_LINKTARGETDESC" />
		<param name="@joobbheader" type="joobbheader" default="BB_TAGSETTINGSIMAGE" />
		<param name="image_max_width" type="text" size="5" default="500" label="BB_WIDTH" description="BB_IMAGEWIDTHDESC" />
		<param name="image_max_height" type="text" size="5" default="375" label="BB_HEIGHT" description="BB_IMAGEHEIGHTDESC" />
		<param name="@joobbheader" type="joobbheader" default="BB_TAGSETTINGSYOUTUBE" />
		<param name="youtube_width" type="text" size="5" default="425" label="BB_WIDTH" description="BB_YOUTUBEWIDTHDESC" />
		<param name="youtube_height" type="text" size="5" default="344" label="BB_HEIGHT" description="BB_YOUTUBEHEIGHTDESC" />
		<param name="youtube_allow_fullscreen" type="radio" default="1" label="BB_ALLOWFULLSCREEN" description="BB_YOUTUBEALLOWFULLSCREENDESC">
			<option value="0">BB_NO</option>
			<option value="1">BB_YES</option>
		</param>
		<param name="@joobbheader" type="joobbheader" default="BB_TAGSETTINGSGVIDEO" />
		<param name="gvideo_width" type="text" size="5" default="425" label="BB_WIDTH" description="BB_GVIDEOWIDTHDESC" />
		<param name="gvideo_height" type="text" size="5" default="344" label="BB_HEIGHT" description="BB_GVIDEOHEIGHTDESC" />
	</params>
</install>