<install version="1.5" type="component">
	<name>Attachment Configuration</name>
	<author>Joo!BB Project</author>
	<copyright>(C) 2007-2010 Joo!BB. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>n/a</authorEmail>
	<authorUrl>http://www.joobb.org</authorUrl>
	<version>1.0.0</version>
	<description>Parameters for individual Attachment Configuration</description>
	<params>
		<param name="enable_attachments" type="radio" default="1" label="BB_ENABLEATTACHMENTS" description="BB_ENABLEATTACHMENTSDESC">
			<option value="0">BB_NO</option>
			<option value="1">BB_YES</option>
		</param>
		<param name="attachment_max" type="text" size="5" default="3" label="BB_ATTACHMENTMAX" description="BB_ATTACHMENTMAXDESC" />
		<param name="attachment_max_file_size" type="text" size="10" default="512000" label="BB_ATTACHMENTMAXFILESIZE" description="BB_ATTACHMENTMAXFILESIZEDESC" />
		<param name="attachment_file_types" type="text" size="50" default="jpg,png,gif,bmp,zip" label="BB_ATTACHMENTFILETYPES" description="BB_ATTACHMENTFILETYPESDESC" />
		<param name="attachment_path" type="text" size="50" default="media/joobb/attachments" label="BB_ATTACHMENTPATH" description="BB_ATTACHMENTPATHDESC" />
	</params>
</install>