	<version>1.0.0</version>
	<description>Parameters for individual View Configuration</description>
	<params>
		<param name="show_latestitems" type="radio" default="1" label="BB_SHOWLATESTITEMS" description="BB_SHOWLATESTITEMSDESC">
			<option value="0">BB_NO</option>
			<option value="1">BB_YES</option>
		</param>
		<param name="show_statistic" type="radio" default="1" label="BB_SHOWSTATISTIC" description="BB_SHOWSTATISTICDESC">
			<option value="0">BB_NO</option>
			<option value="1">BB_YES</option>
		</param>
		<param name="show_whosonline" type="radio" default="1" label="BB_SHOWWHOSONLINE" description="BB_SHOWWHOSONLINEDESC">
			<option value="0">BB_NO</option>
			<option value="1">BB_YES</option>
		</param>
		<param name="show_legend" type="radio" default="1" label="BB_SHOWLEGEND" description="BB_SHOWLEGENDDESC">
			<option value="0">BB_NO</option>
			<option value="1">BB_YES</option>
		</param>
		<param name="show_footer" type="radio" default="1" label="BB_SHOWFOOTER" description="BB_SHOWFOOTERDESC">
			<option value="0">BB_NO</option>
			<option value="1">BB_YES</option>
		</param>
	</params>
</install>
