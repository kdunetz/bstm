<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="component">
	<name>User Settings Defaults Configuration</name>
	<author>Joo!BB Project</author>
	<copyright>(C) 2007-2010 Joo!BB. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>n/a</authorEmail>
	<authorUrl>http://www.joobb.org</authorUrl>
	<version>1.0.0</version>
	<description>Parameters for default user settings on registration</description>
	<params>
		<param name="role" type="list" size="20" default="1" label="BB_ROLE" description="BB_USERSETTINGSDEFAULTSROLEDESC">
			<option value="1">BB_REGISTERED</option>
			<option value="2">BB_PRIVATE</option>
			<option value="3">BB_MODERATOR</option>
			<option value="4">BB_ADMINISTRATOR</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="enable_bbcode" type="radio" default="1" label="BB_ENABLEBBCODE" description="BB_ENABLEBBCODEDESC">
			<option value="0">BB_NO</option>
			<option value="1">BB_YES</option>
		</param>
		<param name="enable_emotions" type="radio" default="1" label="BB_ENABLEEMOTIONS" description="BB_ENABLEEMOTIONSDESC">
			<option value="0">BB_NO</option>
			<option value="1">BB_YES</option>
		</param>
		<param name="auto_subscription" type="radio" default="0" label="BB_AUTOSUBSCRIPTION" description="BB_AUTOSUBSCRIPTIONDESC">
			<option value="0">BB_NO</option>
			<option value="1">BB_YES</option>
		</param>
	</params>
</install>
