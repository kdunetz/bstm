<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="component">
	<name>Configuration Settings</name>
	<author>Joo!BB Project</author>
	<copyright>(C) 2007-2010 Joo!BB. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>n/a</authorEmail>
	<authorUrl>http://www.joobb.org</authorUrl>
	<version>1.0.0</version>
	<description>Configuration Settings</description>
	<params addpath="/administrator/components/com_joocm/elements">
		<param name="community_name" type="text" size="50" default="" label="CM_COMMUNITYNAME" description="CM_COMMUNITYNAMEDESC" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="time_zone" type="timezones" default="" label="CM_TIMEZONE" description="CM_CONFIGTIMEZONEDESC" />
		<param name="time_format" type="joocmtimeformats" default="" label="CM_TIMEFORMAT" description="CM_CONFIGTIMEFORMATDESC" />
		<param name="daylight_saving_time" type="radio" default="0" label="CM_DAYLIGHTSAVINGTIME" description="CM_DAYLIGHTSAVINGTIMEDESC">
			<option value="0">CM_NO</option>
			<option value="1">CM_YES</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="enable_avatars" type="radio" default="1" label="CM_ENABLEAVATARS" description="CM_ENABLEAVATARSDESC">
			<option value="0">CM_NO</option>
			<option value="1">CM_YES</option>
		</param>
		<param name="avatar_source" type="list" default="1" label="CM_AVATARSOURCE" description="CM_AVATARSOURCEDESC">
			<option value="1">CM_JOOCM</option>
			<option value="2">CM_COMMUNITYBUILDER</option>
			<option value="3">CM_COMMUNITYBUILDEREXTENDED</option>
			<option value="4">CM_IDOBLOG</option>
			<option value="5">CM_JOMSOCIAL</option>
			<option value="6">CM_K2</option>
			<option value="7">CM_ALPHAUSERPOINTS</option>
		</param>
		<param name="enable_profiles" type="radio" default="1" label="CM_ENABLEPROFILES" description="CM_ENABLEPROFILESDESC">
			<option value="0">CM_NO</option>
			<option value="1">CM_YES</option>
		</param>
		<param name="force_edit_profile" type="radio" default="1" label="CM_FORCEEDITPROFILE" description="CM_FORCEEDITPROFILEDESC">
			<option value="0">CM_NO</option>
			<option value="1">CM_YES</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="enable_terms" type="radio" default="1" label="CM_ENABLETERMS" description="CM_ENABLETERMSDESC">
			<option value="0">CM_NO</option>
			<option value="1">CM_YES</option>
		</param>
		<param name="enable_root_pathway" type="radio" default="1" label="CM_ENABLEROOTPATHWAY" description="CM_ENABLEROOTPATHWAYDESC">
			<option value="0">CM_NO</option>
			<option value="1">CM_YES</option>
		</param>
		<param name="account_activation" type="radio" default="1" label="CM_ACCOUNTACTIVATION" description="CM_ACCOUNTACTIVATIONDESC">
			<option value="0">CM_NONE</option>
			<option value="1">CM_USER</option>
			<option value="2">CM_ADMIN</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="allow_show_users" type="radio" default="1" label="CM_ALLOWSHOWUSERS" description="CM_ALLOWSHOWUSERSDESC">
			<option value="0">CM_ALL</option>
			<option value="1">CM_REGISTERED</option>
		</param>
		<param name="show_user_as" type="radio" default="0" label="CM_SHOWUSERAS" description="CM_SHOWUSERASDESC">
			<option value="0">CM_USER</option>
			<option value="1">CM_USERNAME</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="description" type="textarea" cols="30" rows="5" default="" label="CM_DESCRIPTION" description="CM_CONFIGDESCRIPTIONDESC" />
		<param name="keywords" type="textarea" cols="30" rows="5" default="" label="CM_KEYWORDS" description="CM_KEYWORDSDESC" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="items_per_page" type="text" size="5" default="10" label="CM_ITEMSPERPAGE" description="CM_ITEMSPERPAGEDESC" />
		<param name="users_main_page" type="text" size="3" default="5" label="CM_USERSATMAINPAGE" description="CM_USERSATMAINPAGEDESC" />
	</params>
</install>
